<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="background">
    <ActionBar title="JOKES" icon="" class ="bar"/>

    <StackLayout class="p-20">
        <Label text="TILT RIGHT FOR NEW JOKE" class="Explain" textWrap="true"/>
        <Button text="NEXT JOKE" tap="{{ onTap }}" class="button" />
        <Label text="{{ message }}" class="joketext" textWrap="true" />
        <Button text="PREVIOUS JOKE" tap="{{ onTap2 }}" class="button" />
        <Label text="TILT LEFT FOR PREVIOUS JOKE" class="Explain" textWrap="true" />
        


    </StackLayout>
    

    
</Page>

